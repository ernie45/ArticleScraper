<div class="container">
    <div id="middleText">
            <div id="giantText">MONGO SCRAPER</div>
            <div id="smallerText">NEW YORK TIMES EDITION</div>
    </div>
    <div class="container" id="savedArticleArea">
        <div id="savedStatus">
            <h1>No Saved Articles at this Moment in Time!</h1>
        </div>
        <div id="savedarticlesDisplay">
            {{#each articles}}
                <div class="row lightBlue space">
                    <div class="col-md-6">
                        <div class="saved white" id={{this.id}}><a href={{this.hyperlink}}><span>{{this.heading}}</span></a></div>
                    </div>
                    <div class="col-md-2"
                    <div class="col-md-2">
                        <button type="button" class="btn btn-secondary createNote white" id={{this.id}}>ARTICLE NOTES</button>
                    </div>
                    <div class="col-md-2">
                        <button type="button" class="btn btn-danger deleteArticle white" name={{this.id}}>DELETE FROM SAVED</button>
                    </div>
                </div>
                <div class="modal-body">
                    <h5>Popover in a modal</h5>
                    <p>This <a href="#" role="button" class="btn btn-secondary popover-test" title="Popover title" data-content="Popover body content is set in this attribute.">button</a> triggers a popover on click.</p>
                    <hr>
                    <h5>Tooltips in a modal</h5>
                    <p><a href="#" class="tooltip-test" title="Tooltip">This link</a> and <a href="#" class="tooltip-test" title="Tooltip">that link</a> have tooltips on hover.</p>
                    </div>
            {{/each}}
        </div>
    </div>
</div>