<div class="container">
    <div id="middleText">
            <div id="giantText">MONGO SCRAPER</div>
            <div id="smallerText">NEW YORK TIMES EDITION</div>
    </div>
    <div class="container" id="savedArticleArea">
        <div id="savedStatus">
            <h1>No Saved Articles at this Moment in Time!</h1>
        </div>
        <div id="savedarticlesDisplay">
            {{#each articles}}
                <div class="row">
                    <div class="col-md-6">
                        <div class="saved" id={{this.id}}><a href={{this.hyperlink}}><span>{{this.heading}}</span></a></div>
                    </div>
                    <div class="col-md-2"
                    <div class="col-md-2">
                        <button type="button" class="btn btn-secondary createNote" id={{this.id}}>ARTICLE NOTES</button>
                    </div>
                    <div class="col-md-2">
                        <button type="button" class="btn btn-danger deleteArticle" name={{this.id}}>DELETE FROM SAVED</button>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>