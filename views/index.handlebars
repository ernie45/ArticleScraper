    <div class="container lightBlue">
        <div class="navbar-header lightBlue col-lg-2">
            <h1 class="navbar-brand" id="mongoTitle">Mongo Scraper</h1>
        </div>
        <div class="navbar-header darkerBlue col-lg-1">
            <a href="/">
                <h4 class="navbar-brand" id="home">Home</h4>
            </a>
        </div>
        <div class="navbar-header lightBlue col-lg-9">
            <a href="/savedArticles">
                <h4 class="navbar-brand" id="name">Saved Articles</h4>
            </a>
            <div class=row>
